<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_menu"
    android:layout_marginBottom="@dimen/margin_menu"
    android:paddingLeft="@dimen/padding_menu"
    android:paddingRight="@dimen/padding_menu">

   	<ImageView
	    android:id="@+id/image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
   	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:contentDescription="@string/app_name"
	    android:background="@drawable/ic_search"
	    android:scaleType="centerCrop"/>
    	
    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/menu_text"
        style="@android:style/TextAppearance.Large"
        android:padding="@dimen/padding_menu_list_row" />
</RelativeLayout>